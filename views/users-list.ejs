<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <% if (users.length > 0) { %>
    <table border="1" cellpadding="8">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>

      <% users.forEach(user => { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <a href="/users/edit/<%= user._id %>">Edit</a>
        </td>
      </tr>
      <% }) %>
    </table>
    <% } else { %>
    <p>No users registered yet.</p>
    <% } %>
    <p><a href="/users/register">Register another user</a></p>
  </body>
</html>
