<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
    <div class="user-list-container">
        <h1><%= title %></h1>

        <% if (users.length > 0) { %>
        <table class="user-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/users/edit/<%= user._id %>" class="btn-edit">Edit</a> |
                        <form action="/users/delete/<%= user._id %>" method="POST" class="delete-form">
                            <button type="submit" class="btn-delete">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p>No users registered yet.</p>
        <% } %>

        <div class="action-links">
            <a href="/users/register" class="btn-register">Register another user</a><br />
            <a href="/" class="btn-back">Go back</a>
        </div>
    </div>
</body>

</html>
