<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
    <div class="admin-dashboard-container">
        <h1>Admin Dashboard</h1>
        <p>Welcome, <%= currentUser.firstName %> (<%= currentUser.role %>)</p>

        <!-- Existing User Table -->
        <table class="user-table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.userId %></td>
                    <td><%= user.firstName %> <%= user.lastName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td><%= user.accountStatus %></td>
                    <td><%= user.createdAt.toLocaleDateString() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- New User List Table -->
        <div class="user-list-container">
            <h1>User List</h1>

            <% if (users.length > 0) { %>
            <table class="user-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                            <a href="/users/edit/<%= user._id %>" class="btn-edit">Edit</a> |
                            <form action="/users/delete/<%= user._id %>" method="POST" class="delete-form">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else { %>
            <p>No users registered yet.</p>
            <% } %>

            <div class="action-links">
                <a href="/users/register" class="btn-register">Register another user</a><br />
                <a href="/users/dashboard" class="btn-back">Go back</a>
            </div>
        </div>
    </div>
</body>

</html>
